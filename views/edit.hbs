<head>
  <meta charset="utf-8">
  <title>restaurant-list</title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://kit.fontawesome.com/19499ea28b.js" crossorigin="anonymous"></script>
</head>

<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
    </div>
    <!--登出按鈕-->
    <div class="d-flex justify-content-center me-auto">
      <div class="container">
        {{>logout}}
      </div>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<div class="container w-50">
  <div class="d-flex justify-content-center">
    <p id="editName">編輯餐廳內容</p>
  </div>
  {{> message}}
  <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
    <div class="mb-4">
      <label for="InputRestaurantName" class="form-label">餐廳名稱 <span class="text-danger">(*必填)</label>
      <input type="text" class="form-control" name="name" value="{{restaurant.name}}" placeholder="please input name" required>
    </div>
    <div class="mb-4">
      <label for="InputRestaurantName_en" class="form-label">餐廳英文名稱 <span class="text-danger">(*必填)</label>
      <input type="text" class="form-control" name="name_en" value="{{restaurant.name_en}}"
        placeholder="please input name_en" pattern="[a-zA-Z0-9]+" required>
    </div>
    <div class="mb-4">
      <label for="InputCategory" class="form-label">類別: 原({{restaurant.category}}) <span class="text-danger">(*必填)</label>
      <select class="form-select" name="category">
        <option value="中東料理">中東料理</option>
        <option value="義式餐廳">義式餐廳</option>
        <option value="美式">美式</option>
        <option value="酒吧">酒吧</option>
        <option value="咖啡">咖啡</option>
        <option value="麵館">麵館</option>
        <option value="其他">其他</option>
      </select>
    </div>
    <div class="mb-4">
      <label for="InputImage" class="form-label">餐廳圖片網址 <span class="text-danger">(*必填)</label>
      <input type="URL" class="form-control" name="image" value="{{restaurant.image}}" placeholder="please input image" required>
    </div>
    <div class="mb-4">
      <label for="InputLocation" class="form-label">地址 <span class="text-danger">(*必填)</label>
      <input type="text" class="form-control" name="location" value="{{restaurant.location}}"
        placeholder="please input location 這個縣 哪個市 某個里 有條街 520號 之類的" required>
    </div>
    <div class="mb-4">
      <label for="InputPhone" class="form-label">電話 <span class="text-danger">(*必填)</label>
      <input type="tel" class="form-control" name="phone" value="{{restaurant.phone}}" placeholder="please input Phone 02 1234 4566 or 0912345678" required>
    </div>
    <div class="mb-4">
      <label for="InputGoogle_map" class="form-label">Google地圖網址 <span class="text-danger">(*必填)</label>
      <input type="URL" class="form-control" name="google_map" value="{{restaurant.google_map}}"
        placeholder="please input google_map" required>
    </div>
    <div class="mb-4">
      <label for="InputRating" class="form-label">評分 <span class="text-danger">(*必填)</label>
      <input type="number" class="form-control" name="rating" step='0.1' min='1.0' max='5.0' value="{{restaurant.rating}}"
        placeholder="please input rating (1.0~5.0)" required>
    </div>
    <div class="mb-4">
      <label for="InputDescription" class="form-label">描述 <span class="text-danger">(*必填)</label>
      <input type="text" class="form-control" name="description" value="{{restaurant.description}}"
        placeholder="please input category" required>
    </div>
    <div class="d-flex justify-content-end mb-5">
      <button type="submit" class="me-3 py-0">Save</button>
      <a href="/restaurants" >back</a>
    </div>
  </form>
</div>


<script src="/javascripts/bootstrap.bundle.min.js"></script>