<head>
  <meta charset="utf-8">
  <title>restaurant-list</title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/detailStyle.css">
  <script src="https://kit.fontawesome.com/19499ea28b.js" crossorigin="anonymous"></script>
</head>

<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
{{#if message}}
<div class="container d-flex justify-content-center" id="updatedSuccess">
  <div>{{message}}</div>
</div>
{{/if}}
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
      <div class="container mb-5 d-flex justify-content-end">
        <a href="/restaurants/{{restaurant.id}}/edit" class="me-3">Edit</a>
        <a href="/restaurants" class="me-3">back</a>
        <form action="/restaurants/{{restaurant.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger btn-sm px-0 py-0">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/bootstrap.bundle.min.js"></script>